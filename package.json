{
  "name": "acs-engine-client",
  "version": "1.0.0",
  "description": "ACS Engine Client",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "dev": "concurrently 'yarn start' 'yarn watch'",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "lint-fix": "tslint --fix 'src/**/*.{ts,tsx}'"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["tslint --fix", "prettier --write", "git add"],
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "repository": "https://github.com/julienstroheker/acs-engine-client",
  "keywords": ["ACS", "Engine", "Electron", "typescript", "react"],
  "contributors": ["Evan Louie <evan.louie@microsoft.com> (https://evanlouie.com)"],
  "license": "MIT",
  "devDependencies": {
    "@types/highlight.js": "^9.12.2",
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "@types/reactstrap": "^5.0.21",
    "concurrently": "^3.5.1",
    "electron": "^2.0.0-beta.7",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "bootstrap": "^4.1.0",
    "highlight.js": "^9.12.0",
    "immutable": "^4.0.0-rc.9",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "reactstrap": "^5.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all"
  }
}
